{
  "manifest_version": 2,
  "name": "GitHub Clipboard Uploader",
  "version": "1.0",
  "description": "Upload clipboard contents to GitHub",
  "permissions": [
    "storage",
    "activeTab",
    "clipboardRead",
    "https://api.github.com/"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "48": "icon.png"
    }
  },
  "options_ui": {
    "page": "options.html",
    "browser_style": true
  },
  "icons": {
    "48": "icon.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "clip_to_gh.valentin@gosu.se"
    }
  }
}
